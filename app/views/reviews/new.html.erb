<h5>Add a review below!</h5>


  <%= form_for @review, :url => {:action => :create} do |f| %>
    <% if @review.errors.any? %>
    <ul id="errors">
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>


    <p>
      <%= f.label :rating %>
      <%= f.text_field :rating %>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </p>

    <p>
      <%= f.submit %>
    </p>
  <% end %>
