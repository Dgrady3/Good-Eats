<h2>Create a Resturant</h2>

<%= form_for @resturant do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </p>

   <p>
    <%= f.label :city %><br>
    <%= f.text_area :city %>
  </p>

   <p>
    <%= f.label :state %><br>
    <%= f.text_area :state %>
  </p>

   <p>
    <%= f.label :zipcode %><br>
    <%= f.text_area :zipcode %>
  </p>

   <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

   <p>
    <%= f.label :category %><br>
    <%= f.text_area :category %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
